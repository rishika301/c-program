#include <stdio.h>

int main() {
    int n, i, j, flag;

    printf("Enter the limit: ");
    scanf("%d", &n);

    printf("Prime numbers in reverse order up to %d:\n", n);

    for(i = n; i >= 2; i--) {  
        flag = 0;              

        for(j = 2; j <= i / 2; j++) { 
            if(i % j == 0) {
                flag = 1;
                break;
            }
        }

        if(flag == 0)
            printf("%d ", i);   
    }

    return 0;
}
